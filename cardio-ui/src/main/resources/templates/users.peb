{% extends "templates/base.peb" %}

{% block stylesheets %}
  <link rel="stylesheet" href="/css/bootstrap-table.min.css">
{% endblock %}

{% block content %}

  <div class="row">

    <div class="col-lg-3">
      <div class="panel panel-blue panel-widget ">
        <div class="row no-padding">
          <div class="col-sm-3 col-lg-3 widget-left"><i class="fa fa-users fa-3x"></i></div>
          <div class="col-sm-9 col-lg-9 widget-right">
            <div class="large"><span id="users-count">-</span></div>
            <div class="text-muted">users</div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          users
          <button id="sortByLogin" type="button" class="btn btn-default">login <span class="glyphicon glyphicon-sort-by-alphabet"></span></button>
          <button id="sortByFirstname" type="button" class="btn btn-default">firstname <span class="glyphicon glyphicon-sort-by-alphabet"></span></button>
          <button id="sortByLastname" type="button" class="btn btn-default">lastname <span class="glyphicon glyphicon-sort-by-alphabet"></span></button>
        </div>
        <div class="panel-body">

          <table id="users-table"></table>
          
          <div class="block form-inline">
            <div class="form-group">
              <input type="text" class="form-control" id="userLogin" placeholder="JDO">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="userFirstname" placeholder="John">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="userLastname" placeholder="Doe">
            </div>
            <button id="addUser" type="button" class="btn btn-default">add user</button>
          </div>
          
        </div>
      </div>
    </div>

  </div>

{% endblock %}

{% block scripts %}
  <script src="/js/ext/bootstrap-table.min.js"></script>
  <script src="/js/users.js"></script>
{% endblock %}