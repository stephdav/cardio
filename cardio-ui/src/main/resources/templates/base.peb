<!DOCTYPE html>
<html lang="fr">
<head>
  <!-- Basic Page Needs
  ------------------------------------------------------ -->
  <meta charset="utf-8">
  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}">
  <meta name="author" content="stephane.david@soprasteria.com">

  <!-- Mobile Specific Metas
  ------------------------------------------------------ -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- CSS
  ------------------------------------------------------ -->
  <link rel="stylesheet" href="{{href}}/css/bootstrap.min.css">
  <link rel="stylesheet" href="{{href}}/css/font-awesome.min.css">
  <link rel="stylesheet" href="{{href}}/css/style.css">
  
  {% block stylesheets %}{% endblock %}

  <!-- Favicon
  ------------------------------------------------------ -->
  <link rel="icon" type="image/x-icon" href="{{href}}/favicon-cardio.ico">

</head>

<body>
  <div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="{{href}}/ui/"><img alt="cardio" src="{{href}}/images/cardio.png"></a>
      </div>
      <!-- Top Menu Items -->
      <p id="project-name" />
      <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav side-nav">
          <li class="{{ menuSprints }}"><a id="menuSprints" href="{{href}}/ui/sprints"><i class="fa fa-fw fa-repeat fa-2x"></i></a></li>
          <li class="{{ menuStories }}"><a id="menuStories" href="{{href}}/ui/stories"><i class="fa fa-fw fa-server fa-2x"></i></a></li>
          <li class="{{ menuSprintPlanning }}"><a id="menuSprintPlanning" href="{{href}}/ui/sprintPlanning"><i class="fa fa-fw fa-handshake-o fa-2x"></i></a></li>
          <li class="{{ menuBurndown }}"><a id="menuBurndown" href="{{href}}/ui/burndown"><i class="fa fa-fw fa-table fa-2x"></i></a></li>
          <li class="{{ menuUsers }}"><a id="menuUsers" href="{{href}}/ui/users"><i class="fa fa-fw fa-users fa-2x"></i></a></li>
          <li class="{{ menuAbout }}"><a id="menuAbout" href="{{href}}/ui/about"><span class="fa-stack fa-lg"><i class="fa fa-fw fa-circle-thin fa-stack-2x"></i><i class="fa fa-fw fa-info fa-stack-1x"></i></span></i></a></li>
        </ul>
      </div>
    </nav>

    <div id="page-wrapper">
      <div class="container-fluid">
        {% block content %}{% endblock %}
      </div>
    </div>

  </div> <!-- /#wrapper -->

  <script src="{{href}}/js/ext/jquery-3.1.0.min.js"></script>
  <script src="{{href}}/js/ext/bootstrap.min.js"></script>
  <script src="{{href}}/js/site.js"></script>
  {% block scripts %}{% endblock %}

</body>
</html>