<!DOCTYPE html>
<html lang="fr">
<head>
  <!-- Basic Page Needs
  ------------------------------------------------------ -->
  <meta charset="utf-8">
  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}">
  <meta name="author" content="stephane.david@soprasteria.com">

  <!-- Mobile Specific Metas
  ------------------------------------------------------ -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- CSS
  ------------------------------------------------------ -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/font-awesome.min.css">
  <link rel="stylesheet" href="/css/style.css">
  
  {% block stylesheets %}{% endblock %}

  <!-- Favicon
  ------------------------------------------------------ -->
  <link rel="icon" type="image/x-icon" href="/favicon-cardio.ico">

</head>

<body>
  <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/ui/"><img alt="cardio" src="/images/cardio.png"></a>
            </div>
            <!-- Top Menu Items -->
            <p id="project-name" />
            <!--
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cog"></i> administration <b class="caret"></b></a>
                    <ul class="dropdown-menu admin-dropdown">
                        <li><a href="/ui/admin/sprints"><i class="fa fa-fw fa-repeat"></i> sprints</a></li>
                        <li><a href="/ui/admin/users"><i class="fa fa-fw fa-users"></i> users</a></li>
                    </ul>
                </li>
            </ul>
            -->
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="{{ menuSprintPlanning }}"><a href="/ui/sprintPlanning"><i class="fa fa-fw fa-handshake-o fa-2x"></i></a></li>
                    <li class="{{ menuSprints }}"><a href="/ui/admin/sprints"><i class="fa fa-fw fa-repeat fa-2x"></i></a></li>
                    <!-- <li class="{{ menuUsers }}"><a href="/ui/admin/users"><i class="fa fa-fw fa-users fa-2x"></i></a></li> -->
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
    
    <div id="page-wrapper">

      <div class="container-fluid">
        {% block content %}{% endblock %}

        <footer class="footer">
          <span class="appVersion"></span> provided by <a href="mailto:stephane.david@soprasteria.com">stephane.david@soprasteria.com</a>
        </footer>

      </div>

    </div>

  </div> <!-- /#wrapper -->

  <script src="/js/ext/jquery-3.1.0.min.js"></script>
  <script src="/js/ext/bootstrap.min.js"></script>
  <script src="/js/site.js"></script>
  {% block scripts %}{% endblock %}

</body>
</html>